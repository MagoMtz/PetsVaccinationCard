<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context=".addeditowner.ui.view.AddEditOwnerActivity"
    tools:showIn="@layout/activity_add_edit_owner">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tily_owner_first_name"
        android:layout_marginLeft="@dimen/form_element_input_margin"
        android:layout_marginRight="@dimen/form_element_input_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_owner_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textAutoCorrect"
            android:singleLine="true"
            android:hint="@string/add_edit_owner.activity.et.owner_first_name"
            android:imeOptions="actionNext" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tily_owner_last_name"
        android:layout_marginLeft="@dimen/form_element_input_margin"
        android:layout_marginRight="@dimen/form_element_input_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_owner_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textAutoCorrect"
            android:singleLine="true"
            android:hint="@string/add_edit_owner.activity.et.owner_last_name"
            android:imeOptions="actionNext" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tily_owner_address"
        android:layout_marginLeft="@dimen/form_element_input_margin"
        android:layout_marginRight="@dimen/form_element_input_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_owner_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textAutoCorrect"
            android:singleLine="true"
            android:hint="@string/add_edit_owner.activity.et.owner_address"
            android:imeOptions="actionNext" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tily_owner_phone"
        android:layout_marginLeft="@dimen/form_element_input_margin"
        android:layout_marginRight="@dimen/form_element_input_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_owner_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:singleLine="true"
            android:hint="@string/add_edit_owner.activity.et.owner_phone"
            android:imeOptions="actionDone" />

    </android.support.design.widget.TextInputLayout>


</LinearLayout>
</layout>
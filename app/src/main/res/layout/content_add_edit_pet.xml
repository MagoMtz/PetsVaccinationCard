<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".addeditpet.ui.view.AddEditPetActivity"
    tools:showIn="@layout/activity_add_edit_pet">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tily_pet_name"
        android:layout_marginLeft="@dimen/form_element_input_margin"
        android:layout_marginRight="@dimen/form_element_input_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_edit_pet.activity.et.pet_name"
            android:inputType="textCapSentences|textAutoCorrect"
            android:imeOptions="actionNext"
            android:singleLine="true"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tily_pet_kind"
        android:layout_marginLeft="@dimen/form_element_input_margin"
        android:layout_marginRight="@dimen/form_element_input_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_pet_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_edit_pet.activity.et.pet_kind"
            android:inputType="textCapSentences|textAutoCorrect"
            android:imeOptions="actionNext"
            android:singleLine="true"
            />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/ly_pet_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_element_input_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Adapter_TextView_MainText"
            android:text="@string/add_edit_pet.activity.tv.pet_sex"/>

        <RadioGroup
            android:id="@+id/rg_sex_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_sex_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_edit_pet.activity.rb.pet_sex_male"
                />

            <RadioButton
                android:id="@+id/rb_sex_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_edit_pet.activity.rb.pet_sex_female"
                />

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_pet_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_adapter_main_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_edit_pet.activity.tv.pet_birthday"
            style="@style/Adapter_TextView_MainText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tily_birthday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:layout_marginLeft="@dimen/form_element_input_margin"
                android:layout_marginRight="@dimen/form_element_input_margin"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:text="@string/date_format"
                    />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/btn_birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                app:srcCompat="@drawable/ic_calendar"
                android:backgroundTint="@android:color/transparent"
                android:tint="@color/colorPrimaryDark"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tily_pet_breed"
        android:layout_marginLeft="@dimen/form_element_input_margin"
        android:layout_marginRight="@dimen/form_element_input_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_pet_breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_edit_pet.activity.et.pet_breed"
            android:inputType="textCapSentences|textAutoCorrect"
            android:imeOptions="actionNext"
            android:singleLine="true"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tily_pet_color"
        android:layout_marginLeft="@dimen/form_element_input_margin"
        android:layout_marginRight="@dimen/form_element_input_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_pet_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_edit_pet.activity.et.pet_color"
            android:inputType="textCapSentences|textAutoCorrect"
            android:imeOptions="actionNext"
            android:singleLine="true"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tily_pet_id_number"
        android:layout_marginLeft="@dimen/form_element_input_margin"
        android:layout_marginRight="@dimen/form_element_input_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_pet_id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_edit_pet.activity.et.pet_id_number"
            android:inputType="textCapSentences|textAutoCorrect"
            android:imeOptions="actionNext"
            android:singleLine="true"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tily_pet_particular_signs"
        android:layout_marginLeft="@dimen/form_element_input_margin"
        android:layout_marginRight="@dimen/form_element_input_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_pet_particular_signs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_edit_pet.activity.et.pet_particular_signs"
            android:inputType="textCapSentences|textAutoCorrect"
            android:imeOptions="actionDone"
            android:singleLine="true"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_adapter_main_margin">

        <TextView
            android:id="@+id/tv_micro_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_edit_pet.activity.tv.pet_micro_chip"
            style="@style/Adapter_TextView_MainText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <CheckBox
            android:id="@+id/cb_pet_micro_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_micro_chip"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_tattoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_edit_pet.activity.tv.pet_tattoo"
            style="@style/Adapter_TextView_MainText"
            app:layout_constraintStart_toEndOf="@id/cb_pet_micro_chip"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <CheckBox
            android:id="@+id/cb_pet_tattoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_tattoo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ly_owners"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_edit_pet.activity.owner_scrollview_height"
        android:layout_margin="@dimen/list_adapter_main_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_edit_pet.activity.add_btn.height"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:layout_gravity="center_vertical"
                style="@style/Adapter_TextView_MainText"
                android:text="@string/add_edit_pet.activity.tv.pet_owner"/>

            <ImageView
                android:id="@+id/btn_add_owner"
                android:layout_width="@dimen/add_edit_pet.activity.add_btn.width"
                android:layout_height="@dimen/add_edit_pet.activity.add_btn.height"
                android:layout_weight=".2"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_circle_add"
                />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_vaccines"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_edit_pet.activity.owner_scrollview_height"
        android:layout_margin="@dimen/list_adapter_main_margin"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_edit_pet.activity.add_btn.height"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:layout_gravity="center_vertical"
                style="@style/Adapter_TextView_MainText"
                android:text="@string/add_edit_pet.activity.tv.pet_vaccines"/>

            <ImageView
                android:id="@+id/btn_add_vaccine"
                android:layout_width="@dimen/add_edit_pet.activity.add_btn.width"
                android:layout_height="@dimen/add_edit_pet.activity.add_btn.height"
                android:layout_weight=".2"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_circle_add"
                />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewVaccine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            />

    </LinearLayout>

</LinearLayout>
</layout>